	<select id="qna_list" parameterType="int" resultType="qna">
		  <![CDATA[
		select * from (select rownum rnum, qna.* from qna order by qna_no desc)
		where rnum >= ((#{page}-1) * 5+1)  and rnum <= (#{page} * 5) order by qna_group desc, qna_re asc
		 ]]> 
	</select>
	





</mapper>